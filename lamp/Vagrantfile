#!/usr/bin/env ruby
# -*- mode: ruby -*-
# vi: set ft=ruby :
#^syntax detection

Vagrant.configure("2") do |config|
  config.vm.box = "mullen/centos7-64"
  config.vm.hostname = "APPNAME"

  config.vm.provider :virtualbox do | vm |
    vm.customize ["modifyvm", :id, "--memory", 1536]
    vm.customize ["modifyvm", :id, "--cpus", "2"]
    vm.customize ["modifyvm", :id, "--ioapic", "on"]
    vm.customize ["modifyvm", :id, "--nictype1", "virtio"]
    vm.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
  end

  config.vm.network :forwarded_port, guest: 80, host: 8080
  config.vm.network :forwarded_port, guest: 3306, host: 3307

  config.vm.synced_folder "app", "/var/www/html", create: true

  config.vm.provision :chef_solo do |chef|
    chef.custom_config_path = "Vagrantfile.chef"
    chef.cookbooks_path = ["cookbooks"]
    chef.add_recipe "yum"
    chef.add_recipe "build-essential"
    chef.add_recipe "apache2"
    chef.add_recipe "php"
    chef.add_recipe "mariadb::server"
    chef.add_recipe "mariadb::client"
    chef.add_recipe "apache2::mod_php5"
    chef.add_recipe "apache2::mod_rewrite"
    chef.add_recipe "php::module_gd"
    chef.add_recipe "php::module_curl"
    chef.add_recipe "php::module_mysql"
    chef.add_recipe "rvm::vagrant"
    chef.add_recipe "rvm::system"
    chef.add_recipe "nodejs"

    chef.json.merge!({
      nodejs: {
        npm_packages: [
          {name: "grunt"},
          {name: "grunt-cli"},
          {name: "grunt-bower"}
        ]
      },
      rvm: {
        default_ruby: "ruby-2.3.0",
        global_gems: [
          { name: "bundler" },
          { name: "sass" }
        ]
      },
      mariadb: {
        bind_address: "0.0.0.0",
        use_default_repository: true,
        server_root_password: "vagrant",
        server_repl_password: "vagrant",
        server_debian_password: "vagrant",
        forbid_remote_root: false,
      }
    })
  end

  config.vm.provision "shell", inline: <<-SHELL
    sudo systemctl mask firewalld
    sudo systemctl stop firewalld
    sudo rpm -Uvh https://mirror.webtatic.com/yum/el7/epel-release.rpm
    sudo rpm -Uvh https://mirror.webtatic.com/yum/el7/webtatic-release.rpm
    sudo yum install php55w php55w-opcache -y --skip-broken
    sudo yum install yum-plugin-replace -y
    sudo yum replace php-common --replace-with=php55w-common -y
    sudo printf "NameVirtualHost *\n<VirtualHost *:80>\nDocumentRoot /var/www/html\n<Directory \"/var/www/html\">\nOptions FollowSymLinks\nAllowOverride ALL\n</Directory>\n</VirtualHost>" > /etc/httpd/sites-available/default.conf
    sudo sed -i "s/User apache/User vagrant/g" /etc/httpd/conf/httpd.conf
    sudo sed -i "s/Group apache/Group vagrant/g" /etc/httpd/conf/httpd.conf
    sudo a2ensite default
    sudo service httpd restart
    mysql -uroot -pvagrant -e "GRANT ALL ON *.* to root@'%' IDENTIFIED BY 'vagrant';"
  SHELL
end
